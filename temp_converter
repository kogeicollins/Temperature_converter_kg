print("kigot temperature converter")
print("1. Degrees to Farenheight")
print("2. Farenheight to Degrees")
choice=input("Select choice 1-2")

if choice=='1':
	celcius=float(input("Enter temp in celcius: "))	
	farenheit= (celcius*9/5) +32
	print(f"{celcius} °C = {farenheit} F")
elif choice=='2':
	fahrenheit=float(input("Enter temp in farenheit: "))
	celcius=(fahrenheit - 32) *5/9
	print(f"{fahrenheit} F = {celcius} °C ")
else:
	print("enter a valid choice dude!!")
